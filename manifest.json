{
  "manifest_version": 3,
  "name": "AI Chat Response Notifier",
  "version": "3.1.0",
  "description": "Claude・ChatGPT・Geminiの回答が返ってきたらデスクトップ通知でお知らせします",
  "permissions": ["notifications", "webRequest"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
